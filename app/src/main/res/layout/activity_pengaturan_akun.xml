<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#d9fdf4"
    android:layout_height="match_parent"
    tools:context=".ui.activity.Pengaturan_Akun">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:background="@drawable/rectangle_3"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/arrow_1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginEnd="40dp"
                    android:textSize="24dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:text="Lengkapi Info Akun"/>
            </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="35dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_camera_galeri"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/group_1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#8F000000"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"
                    android:text="Nama User"/>
                <EditText
                    android:id="@+id/edt_user"
                    android:background="@drawable/rectangle_4"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:hint="Nama User"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#8F000000"
                    android:textSize="15dp"
                    android:text="Nim"/>
                <EditText
                    android:id="@+id/edt_Nim"
                    android:background="@drawable/rectangle_4"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:hint="Nim"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#8F000000"
                    android:textSize="15dp"
                    android:text="Universitas"/>
                <EditText
                    android:id="@+id/edt_universitas"
                    android:background="@drawable/rectangle_4"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:hint="Nama Universitas"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#8F000000"
                    android:textSize="15dp"
                    android:text="Semester"/>
                <Spinner
                    android:id="@+id/sp_smester"
                    android:background="@drawable/baground_spiner"
                    android:layout_width="match_parent"
                    android:padding="15dp"
                    android:hint="Semester"
                    android:layout_height="wrap_content"/>
                <RadioGroup
                    android:id="@+id/rg_jeniskelamin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rb_pria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/custom_radio"
                        android:textColor="#8F000000"
                        android:text="Pria"/>
                    <RadioButton
                        android:id="@+id/rb_wanita"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/custom_radio"
                        android:textColor="#8F000000"
                        android:text="Wanita"/>
                </RadioGroup>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#8F000000"
                    android:textSize="15dp"
                    android:text="No Handphone"/>
                <EditText
                    android:id="@+id/edt_nomor_hp"
                    android:background="@drawable/rectangle_4"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:hint="No Handphone"
                    android:inputType="number"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_update_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/rectangle_6"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="16dp" />
            </LinearLayout>
        </LinearLayout>
        </ScrollView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>